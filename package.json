{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --cache --ext .js,.jsx,.cjs,.mjs,.ts,.tsx .",
    "format": "prettier --write .",
    "build": "npm run build -w packages -w packages/adapters",
    "test": "npm run test -w packages -w packages/adapters --if-present",
    "website:dev": "npm run dev -w website",
    "website:build": "npm run build -w website",
    "prisma": "npm run prisma -w website"
  },
  "workspaces": [
    "./packages/*",
    "./packages/adapters/*",
    "./examples/*",
    "./website"
  ],
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.5",
    "tailwindcss": "^3.2.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,html,css}": "prettier --write"
  }
}
